{
    "targets": {
        "iOS": {
            "platform": "iOS",
            "type": "application",
			"templates": [
				"BaseTarget"
			],
            "dependencies": [
                {
                    "target": "Core"
                }
            ],
	        "preBuildScripts": [
		        {
			        "name": "Swiftlint",
			        "path": "../Scripts/Swiftlint.sh"
		        }
	        ]
        },
        "iOSTests": {
            "platform": "iOS",
            "templates": [
				"BaseUnitTest"
			],
			"templateAttributes": {
				"tests_parent": "iOS"
			},
            "dependencies": [
                {
                    "target": "iOS"
                }
            ],
            "settings": {
                "TEST_HOST": "$(BUILT_PRODUCTS_DIR)/iOS.app/iOS"
            }
        },
        "iOSUITests": {
            "platform": "iOS",
            "type": "bundle.ui-testing",
            "settings": {
                "TEST_TARGET_NAME": "iOS"
            },
            "sources": [
                {
                    "path": "UITests"
                }
            ],
            "dependencies": [
                {
                    "target": "iOS"
                }
            ]
        }
    }
}
