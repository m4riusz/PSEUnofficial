{
    "targets": {
        "iOS": {
            "platform": "iOS",
            "type": "application",
            "configFiles": {
                "Debug": "Configs/Debug.xcconfig",
                "Release": "Configs/Release.xcconfig"
            },
            "settings": {
                "PRODUCT_BUNDLE_IDENTIFIER": "pl.msut.PSEUnofficial",
                "CODE_SIGN_STYLE": "Manual"
            },
			"templates": [
				"BaseTarget"
			],
            "dependencies": [
                {
                    "target": "Core"
                }
            ],
	        "preBuildScripts": [
		        {
			        "name": "Swiftlint",
			        "path": "../Scripts/Swiftlint.sh"
		        }
	        ]
        },
        "iOSTests": {
            "platform": "iOS",
            "templates": [
				"BaseUnitTest"
			],
			"templateAttributes": {
				"tests_parent": "iOS"
			},
            "dependencies": [
                {
                    "target": "iOS"
                },
                {
                    "package": "SnapshotTesting"
                }
            ],
            "settings": {
                "TEST_HOST": "$(BUILT_PRODUCTS_DIR)/iOS.app/iOS",
                "PRODUCT_BUNDLE_IDENTIFIER": "pl.msut.PSEUnofficialTests"
            }
        },
        "iOSUITests": {
            "platform": "iOS",
            "type": "bundle.ui-testing",
            "settings": {
                "TEST_TARGET_NAME": "iOS",
                "PRODUCT_BUNDLE_IDENTIFIER": "pl.msut.PSEUnofficialUITests"
            },
            "sources": [
                {
                    "path": "UITests"
                }
            ],
            "dependencies": [
                {
                    "target": "iOS"
                }
            ]
        }
    }
}
