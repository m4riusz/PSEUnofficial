{
	"name": "iOS",
	"options": {
		"bundleIdPrefix": "pl.msut",
		"createIntermediateGroups": true,
		"generateEmptyDirectories": true
	},
	"targets": {
		"iOS": {
			"platform": "iOS",
			"type": "application",
			"sources": [
				{
					"path": "Sources"
				},
                {
                    "path": "Info.plist"
                }
			]
		},
		"iOSTests": {
			"platform": "iOS",
			"type": "bundle.unit-test",
            "settings": {
				"TEST_HOST": "$(BUILT_PRODUCTS_DIR)/iOS.app/iOS"
			},
			"sources": [
				{
					"path": "Tests"
				}
			],
            "dependencies": [
				{
					"target": "iOS"
				}
			]
		},
        "iOSUITests": {
			"platform": "iOS",
			"type": "bundle.ui-testing",
            "settings": {
				"TEST_TARGET_NAME": "iOS"
			},
			"sources": [
				{
					"path": "UITests"
				}
			],
            "dependencies": [
				{
					"target": "iOS"
				}
			]
            
		}
	}
}
